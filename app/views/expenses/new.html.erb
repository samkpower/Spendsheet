<div class = "page-header">
  <h1>Add an Expense</h1>
</div>

<div class = "well">
<%= simple_form_for @expense do |f| %>
	<p>Category</p>
  <p><%= f.select :category, [['Groceries','Groceries'],
                              ['Rent/Mortgage','Rent/Mortgage'],
                              ['Fast Food','Fast Food'],
                              ['Restaurant','Restaurant'],
                              ['Cell Phone', 'Cell Phone'],
                              ['Internet', 'Internet'],
                              ['Entertainment', 'Entertainment'],
                              ['Drugstore', 'Drugstore'],
                              ['Interests & Hobbies', 'Interests & Hobbies'],
                              ['Gifts', 'Gifts'],
                              ['Pet', 'Pet'],
                              ['Vacation', 'Vacation'],
                              ['Transportaton', 'Transportation'],
                              ['Insurance', 'Insurance'],
                              ['Utilities', 'Utilities'],
                              ['Furniture,' 'Furniture'],
                              ['Insurance', 'Insurance'],
                              ['Debt Repayment', 'Debt Repayment']] %></p>
	<p><%= f.input :amount %></p>
	<%= f.input :created_at, 
    as: :date, 
    start_year: Date.today.year - 1,
    end_year: Date.today.year + 1,
    order: [:day, :month, :year] 
  %>
    </br>
	<%= button_tag(type: "submit", class: "btn btn-large") do %>
   <i class="icon-plus-sign"></i> Add Entry
<% end %>
<% end %>
</div>